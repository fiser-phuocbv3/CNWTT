                        <input class="span3" type="text" required id="name" name="name" value="@name" placeholder="Tên sản phẩm" require>
                    </div>
                </div>
            </div>

            <div class="form_row control-group">
                <div class="span2"><h4>Giá sản phẩm</h4></div>
