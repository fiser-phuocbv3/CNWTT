                    string m_8GB = "";
                    string m_16GB = "";
                    string m_32GB = "";
                    string m_64GB = "";
                    string m_128GB = "";
                }

                @if (memory != "")
                {
                    switch (memory)
                    {
                        case "2 GB":
                            m_2GB = "selected";
                            break;
                        case "4 GB":
                            m_4GB = "selected";
                            break;
                        case "8 GB":
