            string phoneType =  "";
            string screen = "";
            string camera = "";
            string memory = "";
            string os = "";
            string chipset = "";
            if(phone != null)
            {
                phoneType = phone.phoneType;
                screen = phone.screen;
                camera = phone.camera;
