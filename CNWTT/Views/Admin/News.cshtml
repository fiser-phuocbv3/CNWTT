@model PagedList.IPagedList<news>
@using PagedList.Mvc;
@using PagedList;
@{
    Layout = "~/Views/Shared/Admin.cshtml";
    ViewBag.Title = "News";
   
}

@{

}
<div class="widgets_area">
    <div class="row-fluid align_center">
        <h2 style="font-weight:bold">Quản lý bài viết</h2>
    </div>

    <div class="widgets_area">
        <div class="row-fluid">
            <div class="quick-actions">
                <ul>
                    <li class="align_right"><a href="@Url.Action("AddNews","Admin")"><i class="icon-plus"></i></a></li>
                    <li><h3>Thêm bài viết mới</h3></li>
                </ul>
            </div>
        </div>
    </div>
    

    <div class="row-fluid">
        <div class="span12">
            <div class="well light_blue">
                <div class="well-header">
                    <h5>Danh sách bài viết</h5>
                    <ul>
                        <li class="color_pick">
                            <a href=""><i class="icon-th"></i></a>
                        </li>
                    </ul>
                </div>

                <div class="well-content no-search">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="span1">STT</th>
                                <th class="span7">Tiêu đề</a></th>
                                <th class="span2">Chỉnh sửa</th>
                                <th class="span2">Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 0;
                                IPagedList<news> model = Model;
                                }
                            @foreach (var item in model)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>@item.title</td>
                                    <td><a class="btn" href="@Url.Action("ViewNews","Admin", new { idNews = item.id})"><i class="icon-inbox"></i></a></td>
                                    <td><a class="btn" href="@Url.Action("DeleteNews","Admin", new { idNews = item.id})"><i class="icon-trash"></i></a></td>
                                </tr>
                            }                         
                        </tbody>
                    </table>

                    <div class="table_options bottom_options">
                        <div class="pull-right">                        
                            @Html.PagedListPager(Model, page => Url.Action("News", "Admin", new { page }))
                        </div>                       
                    </div>                   
                </div>
            </div>     
        </div>
    </div>
</div>


