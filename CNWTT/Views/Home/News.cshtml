@model PagedList.IPagedList<news>
@using PagedList.Mvc;
@using PagedList;
@using CNWTT.App_Start;
@{
    Layout = "~/Views/Shared/User.cshtml";
    ViewBag.Title = "News";
}

@{ 
    IEnumerable<news> listN = null;

    listN = Model;
}

@section menu{
    
}
@if (listN != null)
{
    foreach (var l in listN)
    { 
        <div class="image group">
            <div class="grid images_3_of_1">
                <img src="@l.picture" />
            </div>
            <div class="grid news_desc">
                <h3><a href="@Url.Action("ViewNews","Home",new { idNews = l.id})">@l.title</a></h3>
                
                <p>@l.describe <a href="@Url.Action("ViewNews","Home",new { idNews = l.id})" title="more">[...]</a></p>
            </div>
        </div>
    }
}
